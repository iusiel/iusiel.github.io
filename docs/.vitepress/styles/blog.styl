.blog__section
    border-bottom 1px solid $brown2
    padding-bottom 50px

    &:last-child
        border-bottom: none;

    a
        text-decoration none

.blog__header
    text-align center
    margin-bottom 0px

.blog__subheader
    text-align  center
    margin-top 5px
    font-weight 100
    font-size 16px
    font-style italic

.blog__title
    font-size 24px
    text-decoration none
    margin-bottom 0px

    &:hover
        opacity 0.7


.blog__time
    margin-bottom 30px
    display block
    margin-top 5px
    opacity 0.8

    &.center
        text-align center